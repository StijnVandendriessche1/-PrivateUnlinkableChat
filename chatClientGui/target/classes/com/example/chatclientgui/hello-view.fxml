        <Button fx:id="buttonSend" layoutX="404" layoutY="338" text="Send"/>
        <TextField fx:id="tfMessage" layoutX="30" layoutY="338" prefWidth="361" prefHeight="26"/>
        <ScrollPane fx:id="spMain" layoutY="70" layoutX="30" prefHeight="256" prefWidth="418" fitToWidth="true">
            <content>
                <VBox fx:id="vboxMessages" prefHeight="248" prefWidth="412"/>
